/*******************************
         Site Overrides
*******************************/

.align-center {
  margin: auto;
  text-align: center;
}

a {
  color: #f2711c;
}

a:hover {
  color: #A65F18;
}

/*******************************
         Map
*******************************/

#map {
  height: 100%; 
  width: 100%;
}

.map-icons {
  position: absolute;
  z-index: 4000;
  padding: 1rem;
}
  
#main-content {
  height: 90vh; 
  width: 100%;
}

/*******************************
  Views - directed from menu
*******************************/
#views-main-container-sidebar {
  width: 100% !important;
}

.views-main-container {
  padding: 10% 8% 10% 8%; 
  margin: 0rem !important;
  width: 100% !important;
  color: grey !important;
}

.views-main-header {
  color: #f2711c !important;
  text-align: center !important;
}

.views-second-header {
  color: #f2711c !important;
}

.views-third-header {
  color: grey !important;
  margin-top: 1rem !important;
}

.submit-button {
  border-radius: 30px !important;
  margin: 1rem auto 0 auto !important;
  padding: 1rem 3rem 1rem 3rem !important;
  font-size: 1.2rem !important;
  background-color: #f2711c !important;
  color: #ffffff !important;
}

.text {
  font-size: 15px !important;
  color: grey !important;
  max-width: 100% !important;
}

.views-ingress-container {
  font-size: 15px !important;
  font-weight: bold !important;
  width: 100% !important;
  text-align: justify !important;
}

.views-text-container {
  width: 100% !important;
  text-align: justify !important;
}

.views-image {
  border-radius: 10px !important;
}

#urbanbeings-main-header {
  color: #f2711c !important;
  text-align: left !important;
  margin-bottom: 0 !important;
}

#urbanbeings-subheader-1 {
  font-size: 12px !important;
  font-weight: bold !important;
  margin: 0 !important;
}

#urbanbeings-subheader-2 {
  font-size: 10px !important;
  font-weight: bold !important;
  color: grey !important;
}

.image-segment-left {
  border-radius: 0 !important;
  border: none !important;
  box-shadow: none !important;
  margin: 0 !important;
  padding: 0 1.3rem 1rem 0 !important;
}

.screenshot-label {
  font-size: 12px !important;
  padding: 1rem 0 0 1rem !important;
  font-style: italic !important;
}

.image-segment-label {
  font-style: italic !important;
  font-size: 12px !important;
  margin: 0 !important;
  color: grey !important;
}

.contact-label-rows {
  padding-bottom: 0rem !important;
}

.contact-labels {
  height: 20px !important;
}

.contact-text-columns {
  width: 80% !important;
}

/*******************************
  Popup - Create Image Entry
*******************************/

@media screen and (min-width: 900px) {
  .popup-content {
    width: 50% !important;
    }
}

#upload-post-wrapper {
  padding: 0.7rem;
}

#upload-post-header {
  margin: 0 0 0 0;
}

#upload-button{
  border-radius: 30px;
  margin: 1rem 0 0 0;
}

#message-topsidebar-success {
  background-color: #21ba45;
  color: #FFFFFF !important;
  font-size: 12px;
  padding: 8px;
}

#message-topsidebar-error {
  background-color: #f2711c;
  color: #FFFFFF !important;
  font-size: 12px;
  padding: 8px;
}

#message-error-list {
  text-align: left;
}

#close-topsidebar-error {
  background-color: #f2711c !important;
  color: #FFFFFF !important;
  padding: 0rem;
}

.image-upload-error-hidden {
  height: 0;
  visibility: hidden;
}

.hide-button {
  display: none;
}

.show-button {
  display: block;
}

.chooseFileButton.show-button {
  border-radius: 0px;
  background: #D5D9D8;
}

.chooseFileButton.show-button:hover {
  background-color: #C2C1C0;
}

.chooseFileButton.show-button:active {
  background-color: #C2C1C0;
}

.fileContainer {
  padding: 0px;
  box-shadow: 0px 0px 0px 0px;
}

.uploadPicturesWrapper {
  max-height: 210px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

#caption {
  border: none !important;
  border-bottom: thin solid gray !important;
  padding-left: 0.2rem !important;
  padding-right: 0.2rem !important;
  border-radius: 0px !important;
  margin: 0rem 0.5rem 1rem 0.5rem;
}

#location {
  font-size: 12px;
}

.popup-content {
  border: none !important;
  padding: 0px !important;
  width: 70% !important;
  border-radius: 20px;
  max-width: 300px;
  max-height: 400px;
}

.play {
  border: 4px solid #cd9903 !important;
  border-radius: 20px !important;
}

.work {
  border: 4px solid #00b5ad !important;
  border-radius: 20px !important;
}

#play {
  font-size: 12px !important;
}

#work {
  font-size: 12px !important;
}


.fileContainer .uploadPictureContainer {
  width: 90% !important;
  padding: 0px;
}

.fileContainer .deleteImage {
  background: grey;
  font-size: 15px;
}

/*******************************
  Popup - Single Image Entry
*******************************/

#entry-wrapper {
  background-color: white;
  padding: 1rem;
}
#entry-image-wrapper {
  max-height: 210px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

#date-container {
  color: #b2afaf;
  font-size: 12px;
}

#entry-location {
  padding: 0 0 0.7rem 0;
  font-size: 12px;
}

#entry-caption {
  margin: 1rem 0 1rem 0;
  font-size: 14px;
}


/*******************************
         Footer
*******************************/

#footer {
  height: 10vh;
  margin: auto;
  border-top: solid 2px;
  border-color: #F4F3F2;
}

#footer-logo {
  font-size: 5vw;
}

#admin-icon {
  color: #616161;
}

@media screen and (min-width: 1200px) {
  #footer-logo {
    font-size: 30px;
  }
  .footer-icon {
    height: 2vw;
  }
  .sidebar-menu-link {
    color: white!important;
    font-size: 2rem!important;
    margin-top: 1rem!important;
  }
}

@media screen and (max-width: 1200px) {
  .footer-icon {
    height: 6vw;
  }
  .sidebar-menu-link {
    color: white!important;
    font-size: 5vw!important;
    margin-top: 5rem!important;
  }
}

/*******************************
         Sidebarmenu
*******************************/

#menu-sidebar {
  z-index: 4001;
  background-color: #F2711C;
}

#menu-sidebar-grid {
  height: 100%!important;
}


/*******************************
        Form
*******************************/

.ui.form {
  max-width: 450px !important;
  margin-left: auto !important;
  margin-right: auto !important;
}

/*******************************
        Profile page
*******************************/

@media only screen and (max-width: 991px) and (min-width: 768px) {
  .ui.container {
    width: 100% !important;
  }
}

/*******************************
        Sign Up
*******************************/

.ui.basic.grey.active.button {
  color: #f2711c !important;
}

/*******************************
        Admin popup
*******************************/

#pushable-segment {
  border: none !important;
  border-radius: 20px !important;
}